{% extends "base.jinja" %}

{% block title %}
    {{ content.title }}
{% endblock title %}
{% block description %}
{{ content.description | truncate(155, True) }}
{% endblock description %}
{% block FV_title %}
    {{ content.title }}
{% endblock FV_title %}
{% block nav %}
<a href="{{url_for('home')}}">
    <p>home</p>
</a>
<a href="{{url_for('contact')}}">
    <p>contact</p>
</a>
{% endblock nav %}
{% block right_img %}
<img class="right_img animations" src="{{ topimg }}" alt="{{ content.title }} のトップ画像"> 
{% endblock right_img %}
{% block main1 %}
<div class="main1" id="about">
    <div class="img_box">
        <img src="{{ topimg }}" alt="トップ画像: {{ content.title }}">
    </div>
    <div class="text">
        <h3>what is this</h3>
        <h1>{{ content.secondtitle }}</h1>
        <p>{{ content.description }}</p>
    </div>
</div>

{% endblock main1 %}
{% block main2_otherimages %}
{% for url in otherimgs %}

<a href="{{ url }}" data-lightbox="group" class="image-container"><img src="{{ url }}" alt="{{ content.title }} の画像 {{ loop.index }}"></a>

{% endfor %}
{% endblock main2_otherimages %}

{% block main3 %}

{% endblock main3 %}
{% block footer %}
<div class="console">
    <img src="../static/images/SVG/forsplash_namelogo.svg" alt="サイトロゴ" class="logo">
    <div class="circle">
        <div class="label top"><a href=""><p>top</p></a></div>
        <div class="label recruit"><a href="{{ url_for('home') }}"><p>home</p></a></div>
        <div class="label contact"><a href="{{ url_for('.contact') }}"><p>contact</p></a></div>
    </div>
</div>
{% endblock footer %}

